<div v-show="source === 'defaultSource'" class="form-group">
  <label>Default value</label>
  <div class="input-group custom-date">
    <div class="input-group-addon">
      <i class="fa fa-calendar"></i>
    </div>
    <input class="form-control date-picker" type="text" v-model="value" placeholder="Default value" />
  </div>
</div>
<div class="form-group">
  <label>Placeholder</label>
  <input class="form-control" type="text" v-model.trim="placeholder" placeholder="Placeholder text" />
</div>

